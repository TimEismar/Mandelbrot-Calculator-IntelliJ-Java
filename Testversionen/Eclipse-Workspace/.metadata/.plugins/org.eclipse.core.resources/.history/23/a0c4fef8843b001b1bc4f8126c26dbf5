	public static  int getX() {
		return xSizeMan;
	}
	public static  int getY() {
		return ySizeMan;
	}
	public static double getMiddleX(){
		double m = xSizeMan / 2;
		return m;
	}
	public static double getMiddleY(){
		double mw = ySizeMan / 2;
		return mw;
	}
	
